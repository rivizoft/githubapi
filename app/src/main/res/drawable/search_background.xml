            android:thickness="0dp"
            android:shape="rectangle">

            <stroke
                android:width="3dp"
                android:color="@color/colorDarkBlue" />
        </shape>
    </item>

    <item>
        <shape
            android:thickness="0dp"
            android:shape="rectangle">

            <stroke
                android:width="3dp"
                android:color="@color/colorBlue" />

        </shape>
    </item>

</selector>