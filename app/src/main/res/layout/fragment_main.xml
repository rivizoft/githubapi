<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.MainFragment"
    android:orientation="vertical"
    android:background="@color/colorDarkWhite">

    <Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/username_title"
        android:background="@color/colorBlue"
        android:titleTextColor="@color/colorWhite"
        android:subtitle="GitHub API by Kirill Shiryaev"
        android:subtitleTextColor="@color/colorWhite"

        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/colorDark"
        app:tabIndicatorColor="@color/colorBlue"
        android:background="@color/colorWhite"
        android:elevation="0dp">


    </com.google.android.material.tabs.TabLayout>
    
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>